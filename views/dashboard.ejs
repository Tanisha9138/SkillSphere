<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Dashboard</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      min-height: 100vh;
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(120deg, #6a3093 0%, #a044ff 100%);
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .dashboard-card {
      background: rgba(255,255,255,0.13);
      border-radius: 24px;
      box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.25);
      backdrop-filter: blur(14px);
      -webkit-backdrop-filter: blur(14px);
      padding: 44px 36px 36px 36px;
      width: 100%;
      max-width: 420px;
      text-align: center;
      color: #fff;
      margin: 32px 0;
      animation: fadeIn 0.9s cubic-bezier(.39,.575,.56,1) both;
    }
    @keyframes fadeIn {
      0% { opacity: 0; transform: translateY(40px);}
      100% { opacity: 1; transform: translateY(0);}
    }
    .dashboard-card h2 {
      font-size: 2rem;
      margin-bottom: 18px;
      font-weight: 700;
      letter-spacing: 1px;
    }
    .dashboard-section {
      margin-bottom: 24px;
      text-align: left;
    }
    .dashboard-section strong {
      color: #fff;
      font-weight: 600;
    }
    .dashboard-list {
      list-style: none;
      padding: 0;
      margin: 0 0 18px 0;
    }
    .dashboard-list li {
      margin-bottom: 10px;
      color: #e0e0e0;
    }
    .dashboard-btn, .dashboard-link {
      display: block;
      width: 100%;
      margin: 12px 0 0 0;
      padding: 12px 0;
      border-radius: 10px;
      border: none;
      background: linear-gradient(to right, #00c6ff, #0072ff);
      color: white;
      font-size: 1.06em;
      font-weight: 600;
      text-decoration: none;
      cursor: pointer;
      transition: background 0.2s, box-shadow 0.2s;
      box-shadow: 0 2px 12px rgba(0,114,255,0.08);
    }
    .dashboard-btn.logout-btn {
      background: linear-gradient(to right, #e96443, #904e95);
      margin-top: 16px;
    }
    .dashboard-btn:hover, .dashboard-link:hover {
      background: linear-gradient(to right, #0072ff, #00c6ff);
      box-shadow: 0 4px 16px rgba(0,114,255,0.16);
    }
    @media (max-width: 600px) {
      .dashboard-card {
        padding: 28px 10px 22px 10px;
        max-width: 98vw;
      }
    }
  </style>
</head>
<body>
  <div class="dashboard-card">
    <h2>
      <% if (role === 'freelancer') { %>
        ðŸ‘‹ Welcome <%= user.name %>!<br>
        <span style="font-size:1rem; font-weight:400;">Youâ€™re logged in as a <strong>Freelancer</strong>.</span>
      <% } else if (role === 'recruiter') { %>
        ðŸ‘‹ Welcome <%= user.name %>!<br>
        <span style="font-size:1rem; font-weight:400;">Youâ€™re logged in as a <strong>Recruiter</strong>.</span>
      <% } %>
    </h2>

    <% if (role === 'freelancer') { %>
      <div class="dashboard-section">
        <strong>Profile:</strong><br>
        Name: <%= user.name %><br>
        About: <%= user.about || 'No bio yet.' %>
      </div>
      <div class="dashboard-section">
        <strong>Jobs Applied To:</strong>
        <ul class="dashboard-list">
          <% if (appliedJobs && appliedJobs.length > 0) { %>
            <% appliedJobs.forEach(function(job) { %>
              <li>
                <a class="dashboard-link" href="/jobs/<%= job.id %>"><%= job.title %></a>
              </li>
            <% }); %>
          <% } else { %>
            <li>No jobs applied yet.</li>
          <% } %>
        </ul>
      </div>
      <a class="dashboard-btn" href="/appliedJobs">View All Applied Jobs</a>
      <a class="dashboard-btn" href="/jobs">Browse Jobs</a>
      <a class="dashboard-btn" href="/profile">Edit Profile</a>
      <form action="/logout" method="GET" style="margin:0;">
        <button type="submit" class="dashboard-btn logout-btn">Logout</button>
      </form>
    <% } else if (role === 'recruiter') { %>
      <div class="dashboard-section">
        <strong>Posted Jobs:</strong>
        <ul class="dashboard-list">
          <% if (postedJobs && postedJobs.length > 0) { %>
            <% postedJobs.forEach(function(job) { %>
              <li>
                <a class="dashboard-link" href="/job-applications/<%= job.id %>"><%= job.title %></a>
              </li>
            <% }); %>
          <% } else { %>
            <li>No jobs posted yet.</li>
          <% } %>
        </ul>
      </div>
      <a class="dashboard-btn" href="/post-job">Post a New Job</a>
      <a class="dashboard-btn" href="/freelancers">Browse Freelancers</a>
      <a class="dashboard-btn" href="/profile">Edit Profile</a>
      <form action="/logout" method="GET" style="margin:0;">
        <button type="submit" class="dashboard-btn logout-btn">Logout</button>
      </form>
    <% } %>
  </div>
</body>
</html>
